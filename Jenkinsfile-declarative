pipeline {
    agent any
    options {
        timeout(time: 5, unit: "MINUTES")
    }
    tools {
        nodejs 'Node'
    }
    environment {
        FRONTEND_DIR = 'frontend'
        BACKEND_DIR = 'backend'
    }
    stages {
        stage('Checkout Code') {
            steps {
                script {
                    echo 'Checking out code...'
                    git branch: 'main', url: 'https://github.com/Apu133/cash-tracker.git'
                }
            }
        }
        stage('Installing Dependencies') {
            parallel {
                stage('Installing Frontend Dependencies') {
                    when {
                        expression {
                            fileExists(env.FRONTEND_DIR/'package.json')
                        }
                    }
                    steps {
                        dir(env.FRONTEND_DIR) {
                            script {
                                echo 'About to install frontend dependencies...'
                                bat 'npm install'
                            }
                        }
                    }
                }
                stage('Installing Backend Dependencies') {
                    when {
                        expression {
                            fileExists(env.BACKEND_DIR/'package.json')
                        }
                    }
                    steps {
                        dir(env.BACKEND_DIR) {
                            script {
                                echo 'About to install backend dependencies...'
                                bat 'npm install'
                            }
                        }
                    }                    
                }
            }
        }
    }
    post {
        always {
            echo 'Pipeline build complete.'
        }
        success {
            echo 'Mission Successful.'
        }
        failure {
            echo 'Mission failed.'
        }
    }

}



