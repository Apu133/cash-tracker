pipeline {
    agent any
    options {
        timeout(time: "${params.TIME}", unit: "${params.UNIT}")
    }
    tools {
        nodejs 'Node'
    }
    environment {
        FRONTEND_DIR = 'frontend'
        BACKEND_DIR = 'backend'
    }
    stages {
        stage('Checkout Code') {
            steps {
                script {
                    echo 'Checking out code...'
                    git branch: "${params.BRANCH}", url: "${params.URL}"
                }
            }
        }
        stage('Installing Dependencies') {
            parallel {
                stage('Installing Frontend Dependencies') {
                    steps {
                        dir(env.FRONTEND_DIR) {
                            script {
                                if(fileExists('package.json')) {
                                    bat 'npm install'
                                    echo 'Installing Frontend Dependencies...'
                                }
                                else {
                                    echo 'Could not find package.json file in Frontend directory.'
                                }
                            }
                        }
                    }
                }
                stage('Installing Backend Dependencies') {
                    steps {
                        dir(env.BACKEND_DIR) {
                            script {
                                if(fileExists('package.json')) {
                                    bat 'npm install'
                                    echo 'Installing Backend Dependencies...'
                                }
                                else {

                                    echo 'Could not find package.json file in Backend directory.'
                                }
                            }
                        }
                    }                    
                }
            }
        }
    }
    post {
        always {
            echo 'Pipeline build complete.'
        }
        success {
            echo 'Mission Successful.'
        }
        failure {
            echo 'Mission failed.'
        }
    }

}






